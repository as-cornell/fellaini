{# sets sidebar wrapper classes, modifiers #}
{% set sidebar_wrapper_base_class = sidebar_wrapper_base_class | default('sidebar') %}
{% set sidebar_wrapper_modifiers = sidebar_wrapper_modifiers | default(['']) %}
{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}


{# {% extends "@pages/_page.twig" %} #}
{% extends "@templates/_default.twig" %}

{% block page_content %}

    {% include "@atoms/00-text/_heading.twig" with {
        "heading_level" : 1,
        "heading" : title,
        "heading_modifiers" : ["margin"],
        "heading_base_class" : "title"
    } %}

    {{main_content}}
{% endblock %}

{# set in sidebar nav block to the TOC block #}
{% block sidebar_nav %}
    {{ sidebar_nav }}
{% endblock %}
{% set sidebarNav = true %}


{# set sidebar conent #}
{% block sidebar_content %}
    <div {{ bem(sidebar_wrapper_base_class, (sidebar_wrapper_modifiers), sidebar_wrapper_blockname, sidebar_wrapper_extra_classes) }}> 
        {{ aside_content }}
    </div>
{% endblock %}

