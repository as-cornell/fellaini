{% block page_content %}
    {# {{article_field_image_media}} #}
    <div class="pano">
        {{article_pano}}
    </div>
    <div class="title">
        {% include "@atoms/headings/_heading.twig" with {
            "heading_level" : 1,
            "heading" : article_title,
            "heading_modifiers" : ["margin"]
        } %}
        <div>
            {{article_byline}},
            {{article_dateline}}
            {{article_mediasource}}<br/>
        </div>
    </div>
    <div class="social">Twitter
        <br/>
        Facebook</div>
    <div class="content">
        {% if pl %}
            {{article_body}}
        {% endif %}
        {{article_paragraphs}}
        {# {{article_body}} #}
    </div>

{% endblock %}

{% block page_sidebar %}
    {% include "@atoms/headings/_heading.twig" with {
        "heading_level" : 2,
        "heading" : "Related Stories",
        "heading_modifiers" : ["margin"]
    } %}

    {% if pl %}
        {% include "@organisms/card-grid/card-grid-articles.twig" %}
    {% else %}
        {{article_related_articles}}
    {% endif %}

{% endblock %}

