{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}
<main {{ bem(main_element_base_class, (main_element_modifiers), main_blockname, main_element_extra_classes) }}>
  {# if pano #}
  {% if panoImage %}
  <div class="pano">
    {% include "@atoms/04-images/figure.twig" with {
      "img_src": pano_img_src,
      "img_alt": pano_img_alt,
      "img_caption" : pano_img_caption,
      "img_credit" : pano_img_credit,
      "figure_modifiers" : ['pano','image']
    } %}
  </div>

  {% endif %}
  {% if not is_front %}
  <div class="title">
    {% include "@atoms/00-text/_heading.twig" with {
      "heading_level" : 1,
      "heading" : title,
      "heading_modifiers" : ["margin"],
      "heading_base_class" : "title"
    } %}
  </div>
  {% endif %}
  <div class="content">
    {{main_content}}
  </div>
  {% if sidebarNav != false %}
  <nav class="nav">
  {# temporary sidebarNav #}
    <ul class="sidebarNavigation">
      <li class="sidebarNavigation__root">
        <a href="#" class="sidebarNav__link">Career Development</a>
        <ul class="sidebarNav">
          <li class="sidebarNav__item">
            <a href="" class="sidebarNav__link">Summer Experiece Grants</a>
          </li>
          <li class="sidebarNav__item">
            <a href="" class="sidebarNav__link">Pathways Internship Program </a>
          </li>
          <li class="sidebarNav__item withSubNav">
            <a href="" class="sidebarNav__link">Resources for Students</a>
            <ul class="subNav">
              <li class="subNav__item withSubNav">
                <a href="" class="subNav__link">Researching Employers (with sections)</a>
                <ul class="subSubNav">
                  <li class="subSubNav__item">
                    <a href="" class="subSubNav__link">Section #1</a>
                  </li>
                  <li class="subSubNav__item">
                    <a href="" class="subSubNav__link">Section #2</a>
                  </li>
                  <li class="subSubNav__item">
                    <a href="" class="subSubNav__link">Section #3</a>
                  </li>
                </ul>
              </li>
              <li class="subNav__item">
                <a href="" class="subNav__link">Explore Careers</a>
              </li>
              <li class="subNav__item">
                <a href="" class="subNav__link">Networking</a>
              </li>
            </ul>
          </li>
          <li class="sidebarNav__item">
            <a href="" class="sidebarNav__link">New York Recruiting Consortium</a>
          </li>
        </ul>
      </li>
      
    </ul>

    {# {{ sidebar_nav }} #}
  </nav>
  {% endif %}
  {% if sidebarContent %}
  <div class="sidebar">
    {{sidebar_content}}
  </div>
  {% endif %}
  {% if aside %}
      <aside>
        {{ aside_content }}
      </aside>
  {% endif %}
</main>