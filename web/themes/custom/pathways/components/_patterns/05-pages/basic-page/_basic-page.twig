{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}


{# {% extends "@pages/_page.twig" %} #}
{% extends "@templates/_default.twig" %}

{% block page_content %}
    {# if not homepage #}
    {% if not is_front %}
        {% include "@atoms/00-text/_heading.twig" with {
            "heading_level" : 1,
            "heading" : title,
            "heading_modifiers" : ["margin"],
            "heading_base_class" : "title"
        } %}
    {% endif %}
    {{main_content}}
{% endblock %}

{# set in sidebar nav block to the conent of main navigation 2 #}
{% block sidebar_nav %}
    {{ sidebar_nav }}
{% endblock %}

{% block sidebar_content %}
    {{sidebar_content}}
{% endblock %}

{% block aside_content %}
    {{ aside_content }}
{% endblock %}
