{% set PT_base_class = 'photoText' %}

{% if pl %}
    <div {{ bem('block', (photoText_modifiers)) }}>
        {% include "@atoms/headings/_heading.twig" with {
            "heading_level" : 2,
            "heading" : title,
            "heading_modifiers" : ["margin"]
        } %}
        {% include "@atoms/04-images/00-image/figure.twig" with {
            "img_src" : image,
            "img_alt" : img_alt
        } %}
        {{text}}
        {% if link %}
            {% include "@atoms/01-links/link/link.twig" with {
                "link_content" : link_text,
                "link_url" : link_url
            } %}
        {% endif %}
    </div>
{% else %}
    {{kint(slider)}}
    <div {{ bem(PT_base_class, (photoText_modifiers)) }}>
        <div {{ bem('image','', PT_base_class) }}>
            {% include "@atoms/04-images/00-image/figure.twig" with {
                "img_src" : img_src,
                "img_alt" : img_alt,
                "img_caption" : img_caption,
                "img_credit" : img_credit
            } %}
        </div>
        <div {{ bem('text','', PT_base_class) }}>
            {% include "@atoms/headings/_heading.twig" with {
                "heading_level" : 2,
                "heading" : title,
                "heading_modifiers" : ["margin"]
            } %}
            {{text}}
            {% if link %}
                {% include "@atoms/01-links/link/link.twig" with {
                    "link_content" : link_text,
                    "link_url" : link_url
                } %}
            {% endif %}
        </div>

    </div>
{% endif %}