{#

/* -------------------------

Title: _grouping.twig
Descr: Provides container for all items in a grouping. If it's a multiple it shows a title for the block derived from the name of the component entered.
Gets: Label, content, title

--------------------------- */

#}

{% set group_base_class = group_base_class | default('group') %}
{% set group_modifiers = group_modifiers | default(['']) %}
{% set group_classes = group_classes | default(['']) %}

{% if multiple %}
<div{{bem(group_base_class,(group_modifiers),'',group_classes)}}>
{% include "@atoms/00-text/_heading.twig" with {
  "heading_level" : 2,
  "heading" : title,
  "heading_modifiers" : ["margin"]
} %}
{% endif %}
	{{items}}
{% if multiple %}
</div>
{% endif %}