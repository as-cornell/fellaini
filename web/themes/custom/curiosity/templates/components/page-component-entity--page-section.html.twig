{# {{vardumper()}} #}

{% set group_base_class = 'pcWrapper' %}
{% set group_modifiers = ['page-section'] %}


{% set items = content.field_page_components %}
{% set items_length = items|length %}
{% set divid = content.field_page_section_title.0["#context"]["value"]|lower|replace({" ": "-"}) %}

{% if items.1 %}
	{% set multiple = true %}
{% endif %}
{# {{vardumper()}} #}
{% embed "@content/molecules/_grouping.twig" with{
  items: items,
  title: content.field_page_section_title,
  divid : divid,
group_label : content.field_page_section_title

} %}
{% endembed %}

