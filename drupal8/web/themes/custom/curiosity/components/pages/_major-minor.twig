{% set sidebar_wrapper_extra_classes = sidebar_wrapper_extra_classes | default(['']) %}
<main {{ bem(main_element_base_class, (main_element_modifiers), main_blockname, main_element_extra_classes) }}>
	{{title_suffix}}

	{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 1,
    "heading" : title,
    "heading_modifiers" : ["margin"],
    "heading_base_class" : "title"
  } %}
	<div class="level">
		{{level}}
	</div>


	<div class="content">
		{{description}}
		{{body}}
		{{outcomes}}
		{{requirements}}
	</div>
	<div class="sidebar">
		{{image}}
		{% if show_related_articles %}
			<h3>
				Related articles
			</h3>
			{{related_articles}}
		{% endif %}

		{% if show_interests %}
			<h3>
				Associated interests
			</h3>
			{{interests}}
		{% endif %}

		{% if show_disciplines %}
			<h3>
				Related disciplines
			</h3>
			{{disciplines}}
		{% endif %}

	</div>
</main>
