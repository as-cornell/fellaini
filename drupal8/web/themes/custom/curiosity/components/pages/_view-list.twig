{% if show_filter %}
	{{ attach_library('curiosity/markjs') }}
{% endif %}
{% if show_fancybox %}
	{{ attach_library('curiosity/fancybox' )}}
{% endif %}

<main {{ bem(main_element_base_class, (main_element_modifiers), main_blockname, main_element_extra_classes) }}>
	<div class="pageTitle">
		{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 1,
    "heading" : view_title
  } %}
		{% if view_sub_title %}
			{% include "@content/atoms/_heading.twig" with {
    "heading_level" : 2,
    "heading" : view_sub_title,
    "heading_modifiers" : ["margin"]
  } %}
		{% endif %}
		{{view_header}}
		{# Temporary show in page filter here. Might need to put m/m into new template #}

		{% if show_filter %}
			<label for='courseFilter'>
				Search for course number, title, instructor or keywords
			</label>
			<input id='courseFilter' class='searchbox full' type='text' placeholder='search' name="keyword" data-search/>
		{% endif %}
	</div>

	<div class="content">
		{{ view_content }}
	</div>
	{% if view_pager %}
		<div class="pager">
			{{ view_pager }}
		</div>
	{% endif %}

	<div class="sidebar">

		{{ view_sidebar }}

		{# {% if show_search_options %}
									<h3>
